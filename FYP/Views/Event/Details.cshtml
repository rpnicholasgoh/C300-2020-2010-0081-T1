@model Event
<div>
    <div class=" form-group row">
        <div class="offset-sm-2"><h2>@Model.Title</h2></div>
    </div>
</div>

<div class=" form-group row">
    <label class="control-label col-sm-2" for="Description">Description: </label>
    <div class="col-sm-5">
        <input type="text" asp-for="Description" class="form-control" readonly />
    </div>
</div>

<div class=" form-group row">
    <label class="control-label col-sm-2" for="Venue">Venue: </label>
    <div class="col-sm-5">
        <input type="text" asp-for="Venue" class="form-control" readonly />
    </div>
</div>


<div class="form-group row">
    <label class="control-label col-sm-2" for="StartDate">Start Date: </label>
    <div class="col-sm-5">
        <input type="text" asp-for="StartDate" asp-format="{0:dd/MM/yyyy HH:mm}"class="form-control" readonly />
    </div>
</div>

<div class="form-group row">
    <label class="control-label col-sm-2" for="EndDate">End Date: </label>
    <div class="col-sm-5">
        <input type="text" asp-for="EndDate" asp-format="{0:dd/MM/yyyy HH:mm}" class="form-control" readonly />
    </div>
</div>



