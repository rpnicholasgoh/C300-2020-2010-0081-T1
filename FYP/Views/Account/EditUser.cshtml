@{
    Layout = "_Layout";
}

@model User;

@section MoreScripts{
    <script src="~/lib/moment/moment.min.js"></script>
    <link href="~/lib/dtpicker/css/tempusdominus-bootstrap-4.min.css" rel="stylesheet" />
    <script src="~/lib/dtpicker/js/tempusdominus-bootstrap-4.min.js"></script>

    <script language="javascript">
        $(document).ready(function () {
            $('JSReleaseDT').datetimepicker({
                format: 'YYYY-MM-DD',
            })
        });
    </script>

}

@{

}

<form asp-controller="Account"
      asp-action="EditUser"
      method="post">

    <div class="form-group row">
        <div class="offset-sm-2 col-sm-6">
            <h2>Edit User</h2>
        </div>
    </div>

    <input asp-for="Username" hidden />

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="FullName">Full Name: </label>
        <div class="col-sm-4">
            <input asp-for="FullName" class="form-control" />
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="FullName" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="CompanyName">Company Name: </label>
        <div class="col-sm-4">
            <input asp-for="CompanyName" class="form-control" />
        </div>
        <div class="col-sm-2">
            <span asp-validation-for="CompanyName" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="UserRole">User Role: </label>
        <div class="col-sm-4">
            <select asp-for="UserRole" class="form-control">
                <option value="">-- Select --</option>
                <option value="Admin">Admin</option>
                <option value="StartUp">StartUp</option>
                <option value="Alumni">Alumni</option>
            </select>
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="UserRole" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="Batch">Year of Graduate: </label>
        <div class="col-sm-4">
            <input asp-for="Batch" class="form-control" />
        </div>
        <div class="col-sm-2">
            <span asp-validation-for="Batch" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="ContactNo">Contact No: </label>
        <div class="col-sm-4">
            <input asp-for="ContactNo" class="form-control" />
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="ContactNo" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="Email">E-mail: </label>
        <div class="col-sm-4">
            <input asp-for="Email" class="form-control" />
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="Password">Password: </label>
        <div class="col-sm-4">
            <input type="Password" asp-for="Password" class="form-control" />
        </div>
        <div class="col-sm-2">
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="Password2">Confirmed Password: </label>
        <div class="col-sm-4">
            <input type="Password" asp-for="Password2" class="form-control" />
        </div>
        <div class="col-sm-2">
            <span asp-validation-for="Password2" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <div class="offset-sm-2 col-sm-6">
            <input type="submit" value="Update" class="btn btn-primary" />
        </div>
    </div>

    @if (ViewData["Message"] != null)
    {
        <div class="form-group row">
            <div class="offset-sm-2 col-sm-6">
                <div class="alert alert-@ViewData["MsgType"]">
                    @ViewData["Message"]
                </div>
            </div>
        </div>
    }
</form>