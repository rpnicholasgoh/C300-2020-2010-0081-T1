@model ForgotPwd

<div class="offset-sm-4 col-sm-4 justify-content-center mb-5 mt-5">
    <div class="card">
        <article class="card-body">
            <h4 class="card-title text-center mb-4 mt-1">Forgot Password</h4>
            <hr>
            <p class="text-success text-center">Please enter your Email address for verification</p>
            <form asp-controller="Account"
                  asp-action="ForgotPwd"
                  method="post">

                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"> <i class="fa fa-user"></i> </span>
                        </div>
                        <input asp-for="Email" class="form-control" placeholder="abc@company.com" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">

                    <input type="submit" class="btn btn-primary btn-block" value="Submit" />
                </div>
            </form>
        </article>
    </div>
</div>
