@model User;

@section MoreScripts{
    <script src="~/lib/scripts/moment.min.js"></script>
    <script src="~/lib/scripts/bootstrap-datetimepicker.min.js"></script>
    <link href="~/lib/styles/bootstrap-datetimepicker.min.css" rel="stylesheet" />


    <script language="javascript">
        @{
            //Activate DateTimePicker
        }
        $(document).ready(function () {
            //Write JavaScript to activate DateTimePicker
            $('#JSPerfomDT').datetimepicker({
                format: 'YYYY:MM:DD HH:mm', defaultDate: '@DateTime.Today.AddDays(14).ToString("yyyy-MM-dd"), sideBySide:true'
            });
        });
    </script>
}

<form asp-controller="Account"
      asp-action="Create"
      method="post">

    <div class="form-group row">
        <div class="offset-sm-2 col-sm-6">
            <h2>Create User Account</h2>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="Username">User Name: </label>
        <div class="col-sm-4">
            <input asp-for="Username" class="form-control" />
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="FullName">Full Name: </label>
        <div class="col-sm-4">
            <input asp-for="FullName" class="form-control" />
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="FullName" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="CompanyName">Company Name: </label>
        <div class="col-sm-4">
            <input asp-for="CompanyName" class="form-control" />
        </div>
        <div class="col-sm-2">
            <span asp-validation-for="CompanyName" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="UserRole">User Role: </label>
        <div class="col-sm-4">
            <select asp-for="UserRole" class="form-control">
                <option value="">-- Select --</option>
                <option value="Admin">Admin</option>
                <option value="StartUp">StartUp</option>
                <option value="Alumni">Alumni</option>
            </select>
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="UserRole" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="ContactNo">Contact No: </label>
        <div class="col-sm-4">
            <input asp-for="ContactNo" class="form-control" />
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="ContactNo" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="Email">E-mail: </label>
        <div class="col-sm-4">
            <input asp-for="Email" class="form-control" />
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="Password">Password: </label>
        
        <div class="col-sm-4">
            <input type="Password" asp-for="Password" class="form-control"/> 
        </div>
        <div class="col-sm-2">
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="Password2">Confirmed Password: </label>
        <div class="col-sm-4">
            <input type="Password"asp-for="Password2" class="form-control" />
        </div>
        <div class="col-sm-2">
            <span asp-validation-for="Password2" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <div class="offset-sm-2 col-sm-6">
            <input type="submit" value="submit" class="btn btn-primary" />
        </div>
    </div>

    @if (ViewData["Message"] != null)
    {
        <div class="form-group row">
            <div class="offset-sm-2 col-sm-6">
                <div class="alert alert-@ViewData["MsgType"]">
                    @ViewData["Message"]
                </div>"
            </div>
        </div>
    }

</form>

