@model UserLogin

<div class="offset-sm-4 col-sm-4 justify-content-center mb-5 mt-5">
    <div class="card">
        <article class="card-body">
            <h4 class="card-title text-center mb-4 mt-1">Welcome to Accelerator!</h4>
            <hr>
            <p class="text-success text-center">Please sign in to continue. For new users, please activate your account in your e-mail to login.</p>
            <form asp-controller="Account" asp-action="Login" method="post">
                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"> <i class="fa fa-user"></i> </span>
                        </div>
                        <input asp-for="Username" class="form-control" placeholder="Enter User Name" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
                        </div>
                        <input asp-for="Password" class="form-control" placeholder="*******" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <input type="submit" class="btn btn-primary btn-block" value="Login" />
                </div>
                <div class="form-group">
                    <div class="form-check">
                        <input asp-for="RememberMe" class="form-check-input" />
                        <label asp-for="RememberMe" class="form-check-label">
                            Remember Me
                        </label>
                        <a class="ml-2" href="~/Account/ForgotPwd">Forgot password?</a>
                    </div>
                </div>
                @if (ViewData["Message"] != null)
                {
                    <div class="form-group">
                        <div class="alert alert-@ViewData["MsgType"]">
                            <text>@ViewData["Message"]</text>
                        </div>
                    </div>
                }
            </form>
        </article>
    </div>
</div>