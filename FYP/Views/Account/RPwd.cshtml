@model ResetPassword
<div class="offset-sm-4 col-sm-4 justify-content-center mb-5 mt-5">
    <div class="card">
        <article class="card-body">
            <h4 class="card-title text-center mb-4 mt-1">Forgot Password</h4>
            <hr>
            <p class="text-success text-center">Please enter your Email address and input new password</p>
            <form asp-controller="Account" asp-action="ResetPassword" method="post">
                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"> <i class="fa fa-user"></i> </span>
                        </div>
                        <input asp-for="Email" class="form-control" placeholder="abc@company.com" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
                        </div>
                        <input asp-for="UserPw" class="form-control" placeholder="Enter new password" />
                        <span asp-validation-for="UserPw" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
                        </div>
                        <input asp-for="UserPw2" class="form-control" placeholder="Re-enter new password" />
                        <span asp-validation-for="UserPw2" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-primary btn-block" value="Submit" />
                </div>
                @if (ViewData["Message"] != null)
                {
                    <div class="form-group row">
                        <div class="alert alert-@ViewData["MsgType"]">
                            <text>@ViewData["Message"]</text>
                        </div>
                    </div>
                }
            </form>
        </article>
    </div>
</div>